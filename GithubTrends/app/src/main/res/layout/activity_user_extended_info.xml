<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.surf.nikita_makarov.githubtrends.activity.UserExtendedInfoActivity">

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/github_logo1"
        android:contentDescription="@string/user_pic" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="neorush"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginTextView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Neo Rush"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Spain, Barcelona"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/companyImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Apple inc."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/repoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repoImageView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Spaceship 2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/blogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogImageView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="neorush@blogger.com"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailImageView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="iceday@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/fullNameImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_above="@+id/fullNameTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/full_name" />

    <ImageView
        android:id="@+id/locationImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/fullNameImageView"
        android:layout_below="@+id/fullNameTextView"
        android:background="@drawable/location" />

    <ImageView
        android:id="@+id/companyImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/repoImageView"
        android:layout_below="@+id/repoTextView"
        android:background="@drawable/company" />

    <ImageView
        android:id="@+id/repoImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/locationImageView"
        android:layout_below="@+id/locationTextView"
        android:background="@drawable/repo" />


    <ImageView
        android:id="@+id/emailImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/companyImageView"
        android:layout_below="@+id/companyTextView"
        android:background="@drawable/email" />

    <ImageView
        android:id="@+id/blogImageView"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignStart="@+id/emailImageView"
        android:layout_below="@+id/emailTextView"
        android:background="@drawable/blog" />

</RelativeLayout>
